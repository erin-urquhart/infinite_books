
<div class="column is-one-quarter">
  <% if book.image.present? %>
    <div class="card-image">
      <figure class="image is-2by3">
        <%= image_tag book.image.variant(resize_to_limit: [350, 800]).processed %>
      </figure>
    </div>
  <% end %>
  <div class="card book">
    <div class="card-content">
    <p class="title is-4">
      <%= link_to book.name, book %>
    </p>
    <ul>
      <li>
        <strong>Author:</strong> <%= book.author %>
      </li>
      <li>
        <strong>Price: </strong><%= number_to_currency book.price_cents / 100.0 %>
      </li>
    </ul>
    <% if cart.include?(book) %>
      <%= button_to cart_path(book), method: :delete do%>
      âž–Remove from cart
    <% end %>
    <% else %>
      <%= form_with url: cart_index_path, method: :post do %>
      <%= hidden_field_tag(:id, book.id) %>
      <%= button_tag 'Add to Cart' %>
    <% end %>
    <% end %>
    </div>
  </div>
</div>

